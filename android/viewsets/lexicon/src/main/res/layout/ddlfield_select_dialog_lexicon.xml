	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<TextView
		android:id="@+id/liferay_dialog_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/white"
		android:paddingStart="@dimen/text_padding_dialog_title_horizontal"
		android:paddingLeft="@dimen/text_padding_dialog_title_horizontal"
		android:paddingEnd="@dimen/text_padding_dialog_title_horizontal"
		android:paddingRight="@dimen/text_padding_dialog_title_horizontal"
		android:paddingTop="@dimen/text_padding_dialog_title_top"
		android:textColor="?colorPrimary"
		android:textSize="@dimen/text_size_dialog_title"
		/>

</LinearLayout>