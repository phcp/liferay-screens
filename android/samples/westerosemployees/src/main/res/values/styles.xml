<resources>

	<style name="westeros_card_title_black">
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/westeros_card_title_height</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">?colorPrimary</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="westeros_card_title_white" parent="westeros_card_title_black">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="westeros_tour_text">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dp</item>
		<item name="android:textColor">@color/textColorPrimary_westeros</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="westeros_menu_entry" parent="westeros_card">
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:height">@dimen/westeros_block_height</item>
		<item name="android:textColor">@color/textColorPrimary_westeros</item>
	</style>
	
</resources>
